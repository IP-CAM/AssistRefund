{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ heading_title }}</h1>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i
                        class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-money"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ payment_assist_refund_url }}" method="post" enctype="multipart/form-data"
                      id="form-payment" class="form-horizontal">
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-billnumber">{{ entry_billnumber }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="BillNumber" value="{{ billnumber }}" id="input-billnumber" disabled
                                   class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-amount">{{ entry_summ }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="Amount" value="{{ order_total }}" id="input-amount"
                                   class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group required">
                        <div class="col-sm-12">
                            <input type="submit" value="{{ entry_return }}"
                                   class="form-control btn-primary"/>
                        </div>
                    </div>

                    <INPUT TYPE="hidden" NAME="Merchant_ID" VALUE="{{ payment_assist_refund_merchant_id }}">
                    <INPUT TYPE="hidden" NAME="Login" VALUE="{{ payment_assist_refund_login }}">
                    <INPUT TYPE="hidden" NAME="Password" VALUE="{{ payment_assist_refund_password }}">
                    <INPUT TYPE="hidden" NAME="Currency" VALUE="RUB">
                    <INPUT TYPE="hidden" NAME="Language" VALUE="RU">
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }} 